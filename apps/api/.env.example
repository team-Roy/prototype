# App
NODE_ENV=development
PORT=3001
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# Database (PostgreSQL)
# 로컬: docker-compose 사용 시
DATABASE_URL=postgresql://fandom:fandom_local_dev@localhost:5432/fandom_lounge

# Redis
# 로컬: docker-compose 사용 시
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=12

# Storage (S3 Compatible - Cloudflare R2 or MinIO for local)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin123
STORAGE_BUCKET=fandom-media
STORAGE_REGION=auto
STORAGE_PUBLIC_URL=http://localhost:9000/fandom-media

# OAuth - Kakao
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=
KAKAO_CALLBACK_URL=http://localhost:3001/api/auth/kakao/callback

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=debug

# Sentry (optional)
SENTRY_DSN=
